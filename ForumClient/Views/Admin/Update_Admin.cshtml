@model UpdateUserView
@{
    ViewData["Title"] = "Update_Admin";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<main id="content" role="main" class="main">
    <!-- Content -->
    <div class="content container-fluid">
        <!-- Page Header -->
        <div class="page-header" style=" margin-top: 50px;">
            <div class="row align-items-end">
                <div class="col-sm mb-2 mb-sm-0">
                    <nav aria-label="breadcrumb">
                        <ol class="breadcrumb breadcrumb-no-gutter">
                            <li class="breadcrumb-item"><a class="breadcrumb-link" href="javascript:;">Pages</a></li>
                            <li class="breadcrumb-item"><a class="breadcrumb-link" href="javascript:;">Edit Users</a></li>
                        </ol>
                    </nav>

                    <h1 class="page-header-title">Edit Users</h1>
                </div>
            </div>
            <!-- End Row -->
        </div>
        <!-- End Page Header -->
        <!-- Card -->
        <div class="card" style="padding: 30px">
            <!-- Header -->
            <div class="card-header">
                <div class="row justify-content-between align-items-center flex-grow-1">
                    <h3>Add Admin User</h3>
                </div>
                <!-- End Row -->
            </div>
            <!-- End Header -->
            <!-- form -->
            <form style="margin-top: 20px" asp-action="EditAdmin_Post" asp-route-id="@Model.UserName" enctype="multipart/form-data">
                @{
                    if (@Model.Mess != null)
                    {
                        <span style="font-weight: bold">@Model.Mess</span>
                    }
                }
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input asp-for="Name" name="Name" type="text" class="form-control" id="Name" placeholder="Enter Name" value="@Model.Name">
                </div>
                <div class="form-group">
                    <label for="Email">Email address</label>
                    <input asp-for="Email" name="Email" type="email" class="form-control" id="Email" placeholder="Enter email" value="@Model.Email">
                </div>
                <div class="form-group">
                    <label for="Password">Old Password</label>
                    <input asp-for="Password" name="Password" type="password" class="form-control" id="Password" placeholder="Password">

                </div>
                <div class="form-group">
                    <label for="Mobile">Mobile</label>
                    <input asp-for="Mobile" name="Mobile" type="text" class="form-control" id="Mobile" placeholder="Enter Mobile" value="@Model.Mobile">
                </div>
                <div class="form-group">
                    <label for="ProfileImage">Image</label>
                    <input asp-for="ProfileImage" type="file" name="ProfileImage" class="form-control-file" id="ProfileImage" onchange="loadFile(event)">

                    @{
                        if (Model.Image != null)
                        {
                            <p><img src="~/update_images/@Model.Image" id="output" width="200" class="rounded mx-auto d-block" /></p>
                        }
                        else
                        {
                            <p><img src="" id="output" width="200" class="rounded mx-auto d-block" /></p>
                        }
                    }
                    <script>
                        var loadFile = function (event) {
                            var image = document.getElementById('output');
                            image.src = URL.createObjectURL(event.target.files[0]);
                        };
                    </script>
                </div>

                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <!-- End form -->
        </div>
        <!-- End Card -->
    </div>
    <!-- End Content -->
    <!-- Footer -->

 



    <!-- End Footer -->
</main>

