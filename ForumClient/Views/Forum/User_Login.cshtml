@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Forum/_Layout.cshtml";
}

<main id="tt-pageContent" class="tt-offset-none">
    <div class="container">
        <div class="tt-loginpages-wrapper">
            <div class="tt-loginpages">
                <a asp-action="Index" class="tt-block-title">
                    <img src="/Content/images/logo.png" alt="image">
                    <div class="tt-title">
                        Welcome to Doctor Forum as User
                    </div>
                    <div class="tt-description">
                        Log into your account to unlock true power of community.
                    </div>
                </a>
                <form asp-action="Login" class="form-default" method="post">

                    <div class="form-group">
                        <label for="loginUserName">Username</label>
                        <input asp-for="UserName" type="text" name="UserName" class="form-control" id="loginUserName" placeholder="azyrusmax">
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label for="loginUserPassword">Password</label>
                        <input asp-for="Password" type="password" name="Password" class="form-control" id="loginUserPassword" placeholder="************">
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="row">
                        @*<div class="col">
                                <div class="form-group">
                                    <div class="checkbox-group">
                                        <input type="checkbox" id="settingsCheckBox01" name="checkbox">
                                        <label for="settingsCheckBox01">
                                            <span class="check"></span>
                                            <span class="box"></span>
                                            <span class="tt-text">Remember me</span>
                                        </label>
                                    </div>
                                </div>
                            </div>*@
                        <div class="col ml-auto text-right">
                            <a asp-action="Forgot_Password_View" class="tt-underline">Forgot Password</a>
                        </div>
                    </div>
                    <input type="submit" class="btn btn-secondary btn-block" value="Log in" />
                    @*<p>Or login with social network</p>
                        <div class="row">
                            <div class="col">
                                <div class="form-group">
                                    <a href="#" class="btn btn-color01 btn-secondary btn-block">
                                        <i>
                                            <svg class="icon">
                                                <use xlink:href="#facebook-f-brands"></use>
                                            </svg>
                                        </i>
                                        Facebook
                                    </a>
                                </div>
                            </div>
                            <div class="col">
                                <div class="form-group">
                                    <a href="#" class="btn btn-color02 btn-block">
                                        <i>
                                            <svg class="icon">
                                                <use xlink:href="#twitter-brands"></use>
                                            </svg>
                                        </i>
                                        Twitter
                                    </a>
                                </div>
                            </div>
                        </div>*@
                    <p>Are you a Doctor? <a asp-action="Doctor_Signup" class="tt-underline">Login here</a></p>
                    <p>Don’t have an account? <a asp-action="User_Signup" class="tt-underline">Sign up here</a></p>
                    <div class="tt-notes">
                        By Logging in, signing in or continuing, I agree to
                        DoctorForum’s <a href="#" class="tt-underline">Terms of Use</a> and <a href="#" class="tt-underline">Privacy Policy.</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
