@model Change_pass_view
@{
    ViewData["Title"] = "Change_pass";
    Layout = "~/Views/Forum/_Layout.cshtml";
}

<main id="tt-pageContent" class="tt-offset-small">
    <div class="container">
        <div class="tt-tab-wrapper">
            
            <div class="tab-content">
                <div class="tab-pane tt-indent-none  show active" id="tt-tab-01" role="tabpanel">
                    <div class="container">
                        <div class="row">
                            <div class="col-sm-3"></div>
                            <div class="col-sm-5 " style="border: solid 1px white; width: 400px; height: auto ;display: block; background-color: white; border-radius: 2%; margin-top: 50px; margin-left:100px">
                                <div class="tt-wrapper-inner" style="margin-top: 30px">
                                    <h2 style="text-align:center">Change Password</h2>
                                </div>
                                <div class="tt-item" style="margin-top:40px">

                                    <form class="form-default" method="post" enctype="multipart/form-data" asp-action="Change_Password" asp-route-id="@Model.id">

                                        <div class="form-group">
                                            <label for="loginPassword">Password Old</label>
                                            <input required asp-for="OldPassword" type="Password" name="OldPassword" class="form-control" id="loginPassword">
                                        </div>
                                        <div class="form-group">
                                            <label for="loginPassword">Password</label>
                                            <input asp-for="Password" type="Password" name="password" class="form-control" id="loginPassword">
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">
                                            <label for="ConfirmPassword">Confirm Password</label>
                                            <input asp-for="ConfirmPassword" type="password" name="ConfirmPassword" class="form-control" id="ConfirmPassword">
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>

                                        @{
                                            if (@Model.Mess != null)
                                            {
                                                <span style="font-weight: bold">@Model.Mess</span>
                                            }
                                        }
                                    <div style="text-align:center"><input type="submit" class="btn btn-secondary btn-block" value="Update Infomation" / style="width:150px;background-color:orange; "></div>

                                    </form>

                                    <br /><br /><br />
                                </div>
                            </div>
                            <div class="col-sm-4"></div>
                        </div>
                    </div>
                    
                    
                </div>
            </div>
        </div>
    </div>
</main>

