        <div class="search-form">
            <input type="text" class="tt-search__input" placeholder="Search" name="name" id="name">
            <button value="submit">Search</button>
        </div>
    </form>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Categogies_name)
