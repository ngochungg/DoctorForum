@model TopicModel
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Forum/_Layout.cshtml";
}



<main id="tt-pageContent">
    <div class="container">
        <div class="tt-wrapper-inner">
            <h1 class="tt-title-border">
                Create New Topic
            </h1>
            <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
            @{
                if (TempData["Message"] != null)
                {
                    <div class="alert alert-primary" role="alert">
                        @TempData["Message"]
                    </div>
                }
            }
            <form class="form-default form-create-topic" asp-action="CreatePost">
                <div class="form-group">
                    <label for="inputTopicTitle">Topic Title</label>
                    <div class="tt-value-wrapper">
                        <input required asp-for="Title" type="text" name="Title" class="form-control" id="inputTopicTitle" placeholder="Subject of your topic">
                        <span class="tt-value-input">99</span>
                    </div>
                    <div class="tt-note">Describe your topic well, while keeping the subject as short as possible.</div>
                </div>
                <div class="form-group">
                    <label>Topic Type</label>
                    <select asp-for="Categogies_name" class='form-control'>
                        @{
                            foreach (var cate in @ViewBag.cate)
                            {
                                <option value="@cate.name">@cate.name</option>
                            }
                        }
                        <option></option>
                    </select>
                </div>
                <div class="pt-editor">
                    <h6 class="pt-title">Topic Body</h6>
                    <div class="form-group">
                        <textarea id="summernote" rows="10" required asp-for="Contents" class="form-control" placeholder="Lets get started"></textarea>
                    </div>
                    <div class="row">
                        <div class="col-auto ml-md-auto">
                            <button type='submit' class="btn btn-secondary btn-width-lg">Create Post</button>
                        </div>
                    </div>
                </div>
            </form>
        </div>

    </div>
</main>

<!-- include libraries(jQuery, bootstrap) -->
<link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css">
<script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js"></script>
<script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js"></script>

<script src="~/summernote/summernote-bs4.js"></script>
<link href="~/summernote/summernote-bs4.min.css" rel="stylesheet">

<script>
    $(document).ready(function () {
        $('#summernote').summernote({
            height: 400,   //set editable area's height
            codemirror: { // codemirror options
                theme: 'monokai'
            }
        });
    });
</script>