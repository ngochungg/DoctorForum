@model CategoriesModel
@{
    ViewData["Title"] = "Categories";
    Layout = "~/Views/Admin/_Layout.cshtml";
}

<main id="content" role="main" class="main">
    <!-- Content -->
    <div class="content container-fluid">
        <!-- Page Header -->
        <div class="page-header" style=" margin-top: 50px;">
            <!-- End Row -->
        </div>
        <!-- End Page Header -->
        <!-- Card -->
        <div class="card" style="padding: 30px">
            <!-- Header -->
            @{
                if (TempData["Message"] != null)
                {
                    <div class="alert alert-primary" role="alert">
                      @TempData["Message"]
                    </div>
                }
            }
            <div class="card-header">
                <div class="row justify-content-between align-items-center flex-grow-1">
                    <h3>Add Categories</h3>
                </div>
                <!-- End Row -->
            </div>
            <!-- End Header -->
            <!-- form -->
            <form asp-action="CreateCategory">
                <div class="form-group">
                    <label asp-for="name">Title Categories</label>
                    <input type="text" class="form-control" asp-for="name" name="name" aria-describedby="Title" placeholder="Enter Title">
                </div>
                <div class="form-group">
                    <label asp-for="description">Discussion</label>
                    <input type="text" class="form-control" asp-for="description" name="description" aria-describedby="Discussion" placeholder="Enter Discussion">
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
            <!-- End form -->
        </div>
        <!-- End Card -->
    </div>
    <!-- End Content -->
    <!-- Footer -->

    <div class="footer" style="text-align:center">
        <div class="row justify-content-between align-items-center">
            <div class="col">
                <p class="font-size-sm mb-0">&copy; Create  <span class="d-none d-sm-inline-block">by H-B-N-L</span></p>
            </div>
            <div class="col-auto">
                <div class="d-flex justify-content-end">
                    <!-- List Dot -->
                    <!-- End List Dot -->
                </div>
            </div>
        </div>
    </div>



    <!-- End Footer -->
</main>
<!-- ========== END MAIN CONTENT ========== -->
